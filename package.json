{
  "name": "ps4-controller",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc && electron-builder"
  },
  "dependencies": {
    "dgram": "^1.0.1",
    "node-hid": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/node-hid": "^3.0.0",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.Puder.ps4-akku-monitor",
    "productName": "PS4 Akku Monitor",
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release-builds"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
